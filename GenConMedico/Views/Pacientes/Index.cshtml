@{
    ViewData["Title"] = "Pacientes";
}
@model IEnumerable<GenConMedico.ViewModels.Pacientes.ListarPacienteViewModal>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Pacientes</h1>
            </div>
        </div>
    </div>
</section>

<div class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <form asp-action="Index">
                            <div class="input-group input-group-sm" style="width: 300px;">
                                <input type="text" class="form-control" 
                                name="filtro" id="filtro"
                                value="@ViewBag.Filtro"
                                placeholder="Buscar Paciente">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                        <a href="/pacientes/adicionar"
                        class="btn btn-outline-primary btn-sm" >
                        Novo Paciente
                        </a>
                    </div>
                </div>
                <div class="car-body table-responive p-0">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width: 200px;">
                                    CPF    
                                </th>
                                <th>Nome</th>
                                <th style="width: 40px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <td>@item.CPF</td>
                                    <td>@item.Nome</td>
                                    <td>
                                        <a href="/pacientes/editar/@item.Id"
                                        class="btn btn-secondary btn-sm mr-1"
                                        title="Editar Paciente">
                                          <span class="fas fa-edit"></span>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <div class="card-footer clearfix">
                    @if( @ViewBag.TotalPaginas > 1){                    
                        <ul class="pagination pagination-sm m-0 float-right">
                            @if(@ViewBag.NumeroPagina > 1)
                            {
                                <li class="page-item">                            
                                    <a class="page-link" 
                                    href="@Url.Action("Index","Pacientes", new {Filtro = @ViewBag.Filtro, Pagina = @ViewBag.NumeroPagina -1})">
                                        &laquo;
                                    </a>
                                </li>                            
                            }
                            <li class="page-item page-link">                            
                                PÃ¡gina @ViewBag.NumeroPagina de @ViewBag.TotalPaginas
                            </li>
                            @if(@ViewBag.NumeroPagina < @ViewBag.TotalPaginas)
                            {
                                <li class="page-item">                            
                                    <a class="page-link" 
                                    href="@Url.Action("Index","Pacientes", new {Filtro = @ViewBag.Filtro, Pagina = @ViewBag.NumeroPagina +1})">
                                        &raquo;
                                    </a>
                                </li>                            
                            }                        
                        </ul>
                    }
                </div>
            </div>
        </div>

    </div>
</div>