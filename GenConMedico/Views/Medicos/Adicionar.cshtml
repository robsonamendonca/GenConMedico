@{
    ViewData["Title"] = "Médico: Adicionar";
}

@model GenConMedico.ViewModels.Medicos.AdicionarViewModel

<section class="content-header">
    <div class="contariner-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cadastrar médico</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <form asp-action="Adicionar">
                <div class="car">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="CRM" class="control-label"></label>
                            <input asp-for="CRM" class="form-control">
                            <span asp-validation-for="CRM" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary" type="submit">Salvar</button>
                </div>
            </form>
        </div>
    </div>

</section>
